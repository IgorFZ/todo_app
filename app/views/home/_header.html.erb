<div id="header">
    <h1>To-do List</h1>
    <div id="search">
        <ul>
        <% if user_signed_in? %>
            <li>User: <strong><%= current_user.email %></strong>.</li> 
            <li><%= link_to 'Edit User', edit_user_registration_path, :class => 'navbar-link' %></li>
            <li><%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete } %></li>
        <% else %>
            <li><%= link_to "Sign Up", new_user_registration_path, :class => 'navbar-link'  %></li>
            <li><%= link_to "Sign In", new_user_session_path, :class => 'navbar-link'  %></li>
        <% end %>
            <li>
                <input type="text" placeholder="Search">
                <i class="fas fa-search" aria-hidden="true"></i>
            </li>
        </ul>
    </div>
</div>